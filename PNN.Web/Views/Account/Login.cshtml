@model PNN.Web.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.3.1/css/all.css" integrity="sha384-mzrmE5qonljUremFsqc01SB46JvROS7bZs3IO2EmfFsd15uHvIt+Y8vEf7N7fWAU" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/style.css">
<br /><br /><br /><br />
    <div class="d-flex justify-content-center h-75">
        <div class="card">
            <div class="card-header">
                <h3>Ingresar</h3>
                <div class="d-flex justify-content-end social_icon">
                    <span><i class="fab fa-facebook-square"></i></span>
                    <span><i class="fab fa-google-plus-square"></i></span>
                    <span><i class="fab fa-twitter-square"></i></span>
                </div>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly"></div>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Primary"><i class="fas fa-user"></i></span>
                        </div>
                        <input asp-for="Username" class="form-control" type="text" placeholder="username" />
                        <span asp-validation-for="Username" class="text-warning"></span>
                    </div>
                    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
                    <div class="input-group form-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="Primary"><i class="fas fa-key"></i></span>
                        </div>
                        <input asp-for="Password" type="password" class="form-control" placeholder="password" />
                        <span asp-validation-for="Password" class="text-warning"></span>
                    </div>
                    <div class="row align-items-center remember">
                        <div class="form-check">
                            <input asp-for="RememberMe" type="checkbox">
                            <label asp-for="RememberMe" class="form-check-label">Recordarme?</label>
                        </div>
                        <span asp-validation-for="RememberMe" class="text-warning"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Login" class="btn float-right login_btn" id="Primary">
                    </div>
                </form>
            </div>
            <div class="card-footer">
                <div class="d-flex justify-content-center links">
                    ¿No tienes una Cuenta?
                    <a asp-action="Register">Registrarse</a>
                </div>
                <div class="d-flex justify-content-center">
                    <a asp-controller="Account" asp-action="RecoverPassword">¿Olvido su contraseña?</a>
                </div>
            </div>
        </div>
    </div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
