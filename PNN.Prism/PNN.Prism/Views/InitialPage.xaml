<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:Sfbuttons="clr-namespace:Syncfusion.XForms.Buttons;assembly=Syncfusion.Buttons.XForms"
             xmlns:gradient ="clr-namespace:Syncfusion.XForms.Graphics;assembly=Syncfusion.Core.XForms"
             xmlns:prism="http://prismlibrary.com"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="PNN.Prism.Views.InitialPage"
             Title="{Binding Title}">
    

    <StackLayout Padding="10,10" >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackLayout Grid.Row="0">
            <Image 
            Source="CNP1" 
            VerticalOptions="Center" />
            </StackLayout>

            <ActivityIndicator
            Grid.Row="1"
            IsRunning="{Binding IsRunning}"
            VerticalOptions="CenterAndExpand"/>

            <Sfbuttons:SfButton
            Grid.Row="2"
            HeightRequest="37"    
            CornerRadius="30"
            IsEnabled="{Binding IsEnabled}"
            Command="{Binding LoginCommand}"
            StyleClass="Rectangulo"
            StyleId="Primary"
            Text="Login">
                <Sfbuttons:SfButton.BackgroundGradient>
                    <gradient:SfRadialGradientBrush Radius="150">
                        <gradient:SfRadialGradientBrush.GradientStops>
                            <gradient:SfGradientStop Color="#0ac4ba" Offset="0"/>
                            <gradient:SfGradientStop Color="#2bda8e" Offset="1"/>
                        </gradient:SfRadialGradientBrush.GradientStops>
                    </gradient:SfRadialGradientBrush>
                </Sfbuttons:SfButton.BackgroundGradient>
            </Sfbuttons:SfButton>


            <Button
            Grid.Row="3"
            CornerRadius="30"
            HeightRequest="37" 
            IsEnabled="{Binding IsEnabled}"
            Command="{Binding InvCommand}"
            StyleClass="Rectangulo"
            Text="Invitado"/>

            <Label
            Grid.Row="4"
            Margin="0,70,0,0"
            HorizontalOptions="Center"
            Text="Aun no estas Registrado?        Registrate" >
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding RegisterCommand}"/>
                </Label.GestureRecognizers>
            </Label>

            <Label
            Grid.Row="5"
            Margin="0,70,0,0"
            HorizontalOptions="Center"
            Text="Service terms"/>
            
        </Grid>
        
    </StackLayout>
  
</ContentPage>